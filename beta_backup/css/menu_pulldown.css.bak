/* * * * * * * * * * * * * * * * * *
		Main navigation pull down menus: hover class for standards browsers, .htc file for ie.
		http://www.hszk.bme.hu/~hj130/css/list_menu/hover/
		* * * * * * * * *  * * * * * * * * */

#mainMenu a { float: left; } /* for I5-Mac */

/* Commented Backslash Hack
     hides rule from IE5-Mac \*/

#mainMenu a { float: none; }

/* End IE5-Mac hack */

ul#mainMenu, ul#mainMenu ul
{
	padding: 0;
	margin: 0;
	margin-left: 0px;
	list-style-type: none;
}

ul#mainMenu li
{
	float: left;
	padding: 0 0 0 9px;
	background-color: #e5e5e5;
	/* for right mouseover effect in ie */
	border-left: 0px solid gray;
}

ul#mainMenu li a
{
	display: block;
	padding-right: 9px;
	text-decoration: none;
	border-right: 1px solid #BEBFBF;
	color: #222;
}

ul#mainMenu li a:hover { color: black; }
ul#mainMenu li a:visited { color: #444; }

ul#mainMenu ul
{
	position: absolute;
	visibility: hidden;
	margin-left: -10px;
	margin-top: 0px;
	background-color: #e5e5e5;
	/* for right mouseover effect in ie */
	border: 1px solid #BEBFBF;
	border-top: 0px;
	padding: 4px;
	padding-top: 8px;
}

ul#mainMenu ul li
{
	margin: 0px;
	padding: 4px;
	margin-left: 0px;
	background-color: #e5e5e5;
	/* for right mouseover effect in ie */
	line-height: 100%;
	float: none;
}

ul#mainMenu ul li:hover { background: #e5e5e5; }

ul#mainMenu ul li a
{
	border-right: 0px solid #BEBFBF;
	border-bottom: 0px dotted #BEBFBF;
	margin: 0px;
	padding: 0px;
}

ul#mainMenu ul li a:hover
{
	color: black;
	text-decoration: underline;
	background: #e5e5e5;
}

ul#mainMenu ul a
{
	border-bottom: none;
	border-left: 0px solid gray;
	padding-top: 0px;
	padding-left: 0px;
}

ul#mainMenu li:hover ul, ul#mainMenu li.hover ul
{
	z-index: 34;
	visibility: visible;
}

ul#mainMenu li { behavior: url(http://www.osu.edu/css/hover.htc); }

#menulist
{
	background: #e5e5e5;
	border-color: #BEBFBF;
	border-style: solid;
	border-top-width: 0px;
	border-right-width: 1px;
	border-bottom-width: 0px;
	border-left-width: 1px;
}

/* * * * * * * * * * * * * * * * * *
		Main navigation: Rounded corners
		* * * * * * * * *  * * * * * * * * */

#cornertop, #cornerbottom
{
	height: 4px;
	width: 100%;
	background: url(http://www.osu.edu/images/template_corner/hairline.gif) #e5e5e5 repeat-x top center;
}

#cornertop { margin-top: 0px; }

#cornerbottom
{
	background: url(http://www.osu.edu/images/template_corner/hairline.gif) #e5e5e5 repeat-x bottom center;
	margin-bottom: 0px;
}

#cornertop .rightcorner, #cornerbottom .rightcorner
{
	float: right;
	margin: 0px;
	padding: 0px;
	background: #e5e5e5;
	height: 4px;
	width: 4px;
}

#cornertop img, #cornerbottom img
{
	margin: 0px;
	padding: 0px;
	float: left;
	height: 4px;
	width: 4px;
}
